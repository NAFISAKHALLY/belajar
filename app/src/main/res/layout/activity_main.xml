<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/header">

        <TextView
            android:id="@+id/tv_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:text="Hi, Nafisa Khally 🙋‍♀"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/tv_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_1"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/white"
            android:text="Welcome Back "
            android:textStyle="bold"
            android:textSize="25dp"/>


      <de.hdodenhof.circleimageview.CircleImageView
          android:layout_width="45dp"
          android:layout_height="wrap_content"
          android:src="@drawable/profil"
          android:layout_toRightOf="@id/tv_1"
          android:layout_marginLeft="120dp"
          android:layout_marginBottom="30dp"

          />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/header"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:text="Hot Product🔥"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/see1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tv_3"
        android:layout_below="@id/header"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="130dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="16dp"
        android:text="See All Item "

        />


    <HorizontalScrollView
        android:id="@+id/scroll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_3"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/card1"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_3"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="10dp"
                app:cardUseCompatPadding="true">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/iv_1"
                        android:layout_width="150dp"
                        android:layout_height="120dp"
                        android:src="@drawable/img" />

                    <TextView
                        android:id="@+id/tv_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="40dp"
                        android:layout_toRightOf="@id/iv_1"
                        android:text="KOPI"
                        android:textColor="@color/pink"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_5"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/iv_1"
                        android:text="Rp 25.000" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card2"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_3"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/card1"
                app:cardCornerRadius="15dp"
                app:cardElevation="10dp"
                app:cardUseCompatPadding="true">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/iv_2"
                        android:layout_width="150dp"
                        android:layout_height="120dp"
                        android:src="@drawable/img" />

                    <TextView
                        android:id="@+id/tv_7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="40dp"
                        android:layout_toRightOf="@id/iv_2"
                        android:text="KOPI"
                        android:textColor="@color/pink"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_7"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/iv_2"
                        android:text="Rp 25.000" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card3"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_3"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/card2"
                app:cardCornerRadius="15dp"
                app:cardElevation="10dp"
                app:cardUseCompatPadding="true">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/iv_3"
                        android:layout_width="150dp"
                        android:layout_height="120dp"
                        android:src="@drawable/img" />

                    <TextView
                        android:id="@+id/tv_9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="40dp"
                        android:layout_toRightOf="@id/iv_3"
                        android:text="KOPI"
                        android:textColor="@color/pink"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/tv_10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_9"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/iv_3"
                        android:text="Rp 25.000" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </HorizontalScrollView>


    <TextView
        android:id="@+id/tv_11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/scroll"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="20dp"
        android:text="All Item "
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/see2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tv_11"
        android:layout_below="@id/scroll"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="185dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="16dp"
        android:text="See All Item "

        />

    <androidx.cardview.widget.CardView
        android:id="@+id/card4"
        android:layout_below="@id/tv_11"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="10dp"
        app:cardUseCompatPadding="true"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_4"
                android:layout_width="220dp"
                android:layout_height="match_parent"
                android:src="@drawable/img"
                />
            <TextView
                android:id="@+id/tv_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="KOPI AJAIB"
                android:layout_toRightOf="@id/iv_4"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="40dp"
                android:textColor="@color/pink"
                android:textStyle="normal"
                />
            <TextView
                android:id="@+id/tv_13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp 25.000"
                android:layout_below="@id/tv_12"
                android:layout_toRightOf="@id/iv_4"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card5"
        android:layout_below="@id/card4"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="10dp"
        app:cardUseCompatPadding="true"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_5"
                android:layout_width="220dp"
                android:layout_height="match_parent"
                android:src="@drawable/kopi"
                />
            <TextView
                android:id="@+id/tv_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="KOPI AJAIB"
                android:layout_toRightOf="@id/iv_5"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="40dp"
                android:textColor="@color/pink"
                android:textStyle="normal"
                />
            <TextView
                android:id="@+id/tv_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp 25.000"
                android:layout_below="@id/tv_14"
                android:layout_toRightOf="@id/iv_5"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>